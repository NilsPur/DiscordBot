{
    "compilerOptions": {
        // "module": "commonjs",
        // "target": "es2016",
        "target": "ES2019",
        "module": "commonjs",
        // "moduleResolution": "node",
        "strict": true,
        // "lib": [
        //     "es6",
        //     "dom"
        // ],
        "sourceMap": true,
        "types": [
            // add node as an option
            "node",
            "reflect-metadata"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types",
            "typings/index.d.ts"
        ]
    },
    "exclude": [],
    "include": [
        "src/**/*"
    ]
}